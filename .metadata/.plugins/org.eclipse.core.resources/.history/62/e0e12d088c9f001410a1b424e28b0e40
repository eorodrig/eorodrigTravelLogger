package com.example.travellogger;

import android.widget.Toast;

public class ClaimController {

	private static ClaimList claimList = null;
	
	static public ClaimList getClaimList(){
		
		if (claimList == null){
			claimList = new ClaimList();
		}
		
		
		return claimList;
		
	}
	
	public void addClaim(Claim newClaim){
		if (claimList == null){
			claimList = new ClaimList();
		}
		claimList.addClaim(newClaim);
	}
	
	public void removeClaim(Claim newClaim){
		claimList.removeClaim(newClaim);
		Toast.makeText(ClaimListActivity.this, "New items in list", Toast.LENGTH_SHORT).show();
		Toast.makeText(ClaimListActivity.this,String.valueOf(claimList.size()) , Toast.LENGTH_SHORT).show();
	}
	
	public Claim getClaimAtIndex(int index){
		return claimList.getClaims().get(index);
	}
	
	
}
