package com.example.eorodrigtravellogger;

import  java.util.Date;
public class Claim {

	protected String claimName;
	
	protected Date startDate;
	protected Date endDate;
	
	protected String currency;
	protected double totalAmount;
	
	/**
	 * This is a the constructor for a claim. Every claim needs the following parameters.
	 * We also init the claim amount to 0.
	 * @param name = Claim Name
	 * @param start = Start Date
	 * @param end = End Date
	 * @param currencyType = Currency Type for Claim
	 */
	public Claim(String name, Date start, Date end, String currencyType) {
		this.claimName = name;
		this.startDate = start;
		this.endDate = end;
		this.currency = currencyType;
		this.totalAmount = 0;
	}
	
	
	
	public void editClaim(String name, Date start, Date end, String currencyType){
		this.claimName = name;
		this.startDate = start;
		this.endDate = end;
		this.currency = currencyType;
	}
	
	
	
	public void changeClaimName(String newName){
		this.claimName = newName;
	}
	
	/**
	 * This method returns a formatted string of a claim. It is in the form required by the ViewTestList
	 */
	public String toString(){
		return claimName;
	}

}
