<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NewExpenseLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eorodrigtravellogger.AddNewExpenseActivity" >

    <LinearLayout
        android:id="@+id/NewExpenseCategoryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/NewExpenseCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Category:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/NewExpenseCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewExpenseDescriptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/NewExpenseDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Description:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/NexExpenseDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewExpenseDatelinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp" >

        <TextView
            android:id="@+id/NewExpenseDateTextView"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Expense Date:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/NewExpenseDateEditText"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="dd"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/NewExpenseMonthEditText"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="mm"
            android:inputType="number" />

        <EditText
            android:id="@+id/NewExpenseYearEditText"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="yyyy"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewExpenseAmountSpentlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/NewExpenseAmountSpentTextView"
            android:layout_width="129dp"
            android:layout_height="35dp"
            android:layout_marginTop="14dp"
            android:text="Amount Spent:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/NewExpenseAmountSpentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewExpenseCurrencylinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/NewExpenseCurrencyTextView"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Select Currency:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/NewExpenseCurrencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/expense_category" />
    </LinearLayout>

    <Button
        android:id="@+id/NewExpenseExpenseAddButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Add Expense" />

</LinearLayout>
